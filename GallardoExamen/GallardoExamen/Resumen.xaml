<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GallardoExamen.Resumen">
    <ContentPage.Content>
        <StackLayout>
            <Label Text=""/>
            <Label x:Name = "lblUsuario" />
            <Label x:Name = "lblClave" />
            <Entry x:Name="txtUsuario" IsReadOnly="False" FontSize="12"/>
            <Entry x:Name="txtClave" IsReadOnly="False" FontSize="12"/>
            

            <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                
                <RowDefinition/>

            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>

                <ColumnDefinition/>
              
            </Grid.ColumnDefinitions>

            <Label Text="Total a pagar: " Grid.Row="0" Grid.Column="0" FontSize="10"/>
            <Entry x:Name="txtFinal" IsReadOnly="True" Grid.Row="1" Grid.Column="0" FontSize="10"/>
              
            </Grid>
            <Button x:Name="btnVer" Text="Ver" Clicked="btnVer_Clicked"/>

        </StackLayout>

    </ContentPage.Content>
</ContentPage>